      <font>
         <Font size="48.0" />
      </font>
   </Label>
   <Button fx:id="saveTime" layoutX="14.0" layoutY="404.0" mnemonicParsing="false" onAction="#saveClick" prefHeight="97.0" prefWidth="609.0" text="ЗАПОМНИТЬ">
      <font>
         <Font name="Calibri" size="60.0" />
      </font>
   </Button>
   <Button fx:id="resumeFromMemory" layoutX="13.0" layoutY="519.0" mnemonicParsing="false" onAction="#resumeFromSaveClick" prefHeight="75.0" prefWidth="609.0" text="ВОСПР. ИЗ ПАМЯТИ">
      <font>
         <Font size="55.0" />
      </font>
   </Button>
</AnchorPane>
