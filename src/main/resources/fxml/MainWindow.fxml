      <font>
         <Font size="44.0" />
      </font>
   </Button>
   <Button fx:id="resumeFromMemory" layoutX="14.0" layoutY="506.0" mnemonicParsing="false" onAction="#resumeFromSaveClick" prefHeight="99.0" prefWidth="574.0" text="ВОСПР. ИЗ ПАМЯТИ">
      <font>
         <Font size="44.0" />
      </font>
   </Button>
</AnchorPane>
