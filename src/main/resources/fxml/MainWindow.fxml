<AnchorPane prefHeight="615.0" prefWidth="600" xmlns="http://javafx.com/javafx/15.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.MainWindowController">
   <Button fx:id="prev" layoutX="14.0" layoutY="306.0" mnemonicParsing="false" onAction="#prevAudio" prefHeight="86.0" prefWidth="284.0" text="НАЗАД">
      <font>
         <Font size="39.0" />
      </font>
   </Button>
   <Button fx:id="next" layoutX="304.0" layoutY="306.0" mnemonicParsing="false" onAction="#nextAudio" prefHeight="87.0" prefWidth="284.0" text="ВПЕРЕД">
      <font>
         <Font size="41.0" />
      </font>
   </Button>
   <Button fx:id="pauseOrPlay" layoutX="14.0" layoutY="200.0" mnemonicParsing="false" onAction="#pauseOrPlayClick" prefHeight="99.0" prefWidth="574.0" text="ПАУЗА">
      <font>
         <Font size="41.0" />
      </font>
   </Button>
   <Slider fx:id="sound" blockIncrement="0.0" layoutX="9.0" layoutY="146.0" majorTickUnit="0.5" max="1.0" onMouseDragged="#setSliderSound" prefHeight="51.0" prefWidth="574.0" showTickMarks="true" value="0.7" />
