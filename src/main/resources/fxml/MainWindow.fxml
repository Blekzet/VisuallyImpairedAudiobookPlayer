<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Slider?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="646.0" prefWidth="628.0" xmlns="http://javafx.com/javafx/16-ea+6" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.MainWindowController">
   <Button fx:id="prev" layoutX="13.0" layoutY="289.0" mnemonicParsing="false" onAction="#prevAudio" prefHeight="96.0" prefWidth="298.0" text="НАЗАД">
      <font>
         <Font name="Calibri" size="59.0" />
      </font>
   </Button>
   <Button fx:id="next" layoutX="318.0" layoutY="289.0" mnemonicParsing="false" onAction="#nextAudio" prefHeight="90.0" prefWidth="298.0" text="ВПЕРЕД">
      <font>
         <Font name="Calibri" size="60.0" />
      </font>
   </Button>
   <Button fx:id="pauseOrPlay" layoutX="10.0" layoutY="145.0" mnemonicParsing="false" onAction="#pauseOrPlayClick" prefHeight="140.0" prefWidth="609.0" text="ПАУЗА">
      <font>
         <Font name="Calibri" size="60.0" />
      </font>
   </Button>
   <Slider fx:id="sound" blockIncrement="0.0" layoutX="6.0" layoutY="95.0" majorTickUnit="0.5" max="1.0" onMouseDragged="#setSliderSound" prefHeight="50.0" prefWidth="616.0" showTickMarks="true" value="0.7" />
